{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "files": {
    "ignore": [".next", ".yarn", "node_modules", "public"]
  },
  "organizeImports": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 80,
    "indentStyle": "space",
    "formatWithErrors": false
  }
}
